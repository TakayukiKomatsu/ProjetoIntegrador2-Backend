// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database/dev.sql"
}

model Event {
  id                            Int      @id @default(autoincrement())
  diaEvent                      DateTime
  horaInicio                    String
  horaTermino                   String
  qtdePessoas                   Int
  tempExterna                   Int
  tempSalaAtual                 Int
  tempDesejada                  Int
  horaAcionamentoArCondicionado String
  roomId                        Int
  Room                          Room     @relation(fields: [roomId], references: [id])
}

model Room {
  id        Int      @id @default(autoincrement())
  descricao String
  pais      String
  estado    String
  cidade    String
  salaLocal String
  Event     Event[]
  Sensor    Sensor[]

}

model Sensor {
  id           Int      @id @default(autoincrement())
  tipo         String
  temperatura  String
  leitura      DateTime
  interLeitura Int
  roomId       Int
  Room         Room     @relation(fields: [roomId], references: [id])
}
