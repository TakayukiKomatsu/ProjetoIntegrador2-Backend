// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id                            Int      @id @default(autoincrement())
  diaEvent                      DateTime
  horaInicio                    String   @db.VarChar(45)
  horaTermino                   String   @db.VarChar(45)
  qtdePessoas                   Int
  tempExterna                   Int
  tempSalaAtual                 Int
  tempDesejada                  Int
  horaAcionamentoArCondicionado String   @db.VarChar(45)
  roomId                        Int
  Room                          Room     @relation(fields: [roomId], references: [id])
}

model Room {
  id        Int      @id @default(autoincrement())
  descricao String   @db.VarChar(45)
  pais      String   @db.VarChar(45)
  estado    String   @db.VarChar(45)
  cidade    String   @db.VarChar(45)
  salaLocal String   @db.VarChar(45)
  Event     Event[]
  Sensor    Sensor[]

}

model Sensor {
  id           Int      @id @default(autoincrement())
  tipo         String   @db.VarChar(45)
  temperatura  String   @db.VarChar(45)
  leitura      DateTime
  interLeitura Int
  roomId       Int
  Room         Room     @relation(fields: [roomId], references: [id])
}
